/* pages/guide/list/index.wxss */
.container {
  padding: 30rpx;
  background-color: #F7F8FA;
  min-height: 100vh;
}

.header-area {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.page-desc {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.guide-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.guide-card {
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-left {
  flex: 1;
  padding-right: 20rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.card-intro {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.6;
}

.card-icon {
  font-size: 60rpx;
}

