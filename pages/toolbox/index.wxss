/* pages/toolbox/index.wxss */
page {
  background-color: #F7F8FA;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #F7F8FA;
}

.header {
  margin-bottom: 40rpx;
  padding-left: 10rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* Grid Layout */
.tool-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: 20rpx;
}

.tool-item {
  background: #fff;
  width: calc(33.333% - 14rpx);
  border-radius: 20rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
}

.tool-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.tool-icon {
  font-size: 48rpx;
}

.tool-name {
  font-size: 30rpx;      /* 增大字号，方便点击阅读 (原28rpx -> 30rpx) */
  color: #333;
  font-weight: bold;     /* 加粗 */
}

/* Colors */
.bg-red {
  background: #FFEBEE;
}

.bg-cyan {
  background: #E0F7FA;
}

.bg-blue {
  background: #E3F2FD;
}

.bg-purple {
  background: #F3E5F5;
}

.bg-gray {
  background: #F5F5F5;
}

.bg-indigo {
  background: #E8EAF6;
}

/* 医保凭证提示模态框样式 */
.medical-card-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.medical-card-modal-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.medical-card-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.medical-card-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.medical-card-modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.medical-card-modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.medical-card-modal-tip {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  gap: 4rpx;
}

.medical-card-modal-tip text {
  line-height: 1.8;
}

.medical-card-modal-tip .highlight-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B00;
  margin: 0 4rpx;
}

.medical-card-modal-footer {
  display: flex;
  border-top: 2rpx solid #F0F0F0;
  padding: 20rpx 30rpx 30rpx;
}

.medical-card-modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
  border: none;
}

.medical-card-modal-btn::after {
  border: none;
}

.medical-card-modal-btn.cancel-btn {
  background-color: #F5F5F5;
  color: #666;
}

.medical-card-modal-btn.confirm-btn {
  background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%);
  color: #fff;
}

