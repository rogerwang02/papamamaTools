/* pages/profile/index.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

.profile-header {
  background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%);
  padding: 60rpx 0 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

/* Reset Button Styles for Avatar Wrapper */
.avatar-wrapper {
  padding: 0;
  margin: 0;
  border: none;
  background-color: transparent;
  width: 180rpx !important;
  height: 180rpx !important;
  min-width: 180rpx !important;
  min-height: 180rpx !important;
  max-width: 180rpx !important;
  max-height: 180rpx !important;
  border-radius: 50%;
  margin-bottom: 30rpx;
  background-color: #fff;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  position: relative;
  display: block;
  overflow: hidden;
  line-height: 0;
  box-sizing: border-box;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100% !important;
  height: 100% !important;
  border-radius: 50%;
  display: block;
  object-fit: cover;
  margin: 0;
  padding: 0;
}

.camera-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.user-info {
  width: 60%;
  margin-top: 0;
}

.nickname-input {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
  background-color: transparent;
  padding: 0;
}

.placeholder-text {
  color: rgba(255, 255, 255, 0.7);
}

.action-section {
  padding: 40rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 2;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #FF6B00;
  font-weight: bold;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: none;
  padding: 0;
  margin: 0;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  background: #eee;
  color: #999;
}

.menu-section {
  background-color: #fff;
  margin: 0 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  background: #fff;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 反馈区域 */
.feedback-section {
  margin: 30rpx 30rpx 60rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.feedback-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #FF6B00;
  padding-left: 16rpx;
}

.feedback-box {
  background: #F9F9F9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.feedback-input {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  background-color: transparent;
}

.placeholder {
  color: #BBB;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #FF6B00, #FF8C00);
  color: white;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 0, 0.2);
  border: none;
  padding: 0;
  margin: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn.disabled {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
}

.submit-btn[disabled] {
  background: #E0E0E0 !important;
  color: #999 !important;
  box-shadow: none !important;
}

