/* pages/home/index.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
  background-color: #FFF0E5;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 卡片区域 */
.card-section {
  margin-bottom: 40rpx;
}

/* 加载中状态 */
.loading-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 100rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.loading-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态卡片 - 渐变引导卡片 */
.empty-card {
  background: linear-gradient(135deg, #FF8C33 0%, #FF6B00 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 0, 0.25);
  position: relative;
  overflow: hidden;
}

.empty-card-left {
  margin-right: 32rpx;
  flex-shrink: 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.empty-card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.empty-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 已创建卡片容器 - 医疗风格 */
.card-container {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border-top: 8rpx solid #FF6B00;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.header-left {
  flex: 1;
}

.card-header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.card-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #52C41A;
  margin-right: 8rpx;
}

.status-text {
  font-size: 24rpx;
  color: #52C41A;
  font-weight: 500;
}

.delete-icon-btn {
  padding: 8rpx;
  opacity: 0.6;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  min-height: 44rpx;
}

.delete-icon-btn:active {
  opacity: 1;
  transform: scale(0.95);
}

.delete-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 卡片内容 - 压缩内边距 */
.card-content {
  padding: 30rpx 40rpx 20rpx; /* 上左右保持，下方减少 */
}

/* 姓名 - 稍微调小并大幅减少下方留白 */
.card-name {
  font-size: 52rpx; /* 原64rpx -> 52rpx，更精致 */
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx; /* 原40rpx -> 20rpx，减少空隙 */
  line-height: 1.2;
}

/* 关键信息网格 - 保持但微调 */
.card-info-grid {
  display: flex;
  gap: 30rpx;
  margin-bottom: 10rpx; /* 底部稍微留一点空隙即可 */
}

.card-info-col {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-info-label {
  font-size: 30rpx;      /* 增大字号 (原24rpx -> 30rpx) */
  font-weight: bold;     /* 加粗 */
  color: #666;           /* 保持深灰色，对比度够 */
  margin-bottom: 10rpx;
}

.card-info-value {
  font-size: 30rpx; /* 原32rpx -> 30rpx */
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  min-height: 42rpx; /* 保持最小高度防止塌陷 */
}

.card-info-value.blood-type {
  font-size: 34rpx; /* 原36rpx -> 34rpx */
  color: #FF3B30;
}

.card-info-value.conditions {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; /* 单行显示，超出用省略号 */
  word-break: break-all;
}

/* 操作按钮网格 - 压缩上下空间 */
.card-actions-grid {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 30rpx 30rpx; /* 压缩内边距 */
  border-top: 1rpx solid #F5F5F5;
  margin-top: 20rpx; /* 减少与上方内容的距离 */
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  /* padding: 10rpx; 删除这个多余的padding */
  transition: all 0.2s ease;
}

/* 图标圆形按钮 - 稍微缩小 */
.action-icon-circle {
  width: 80rpx; /* 原90rpx -> 80rpx */
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.action-icon {
  font-size: 36rpx; /* 原40rpx -> 36rpx */
  line-height: 1;
}

.edit-icon {
  background: #E3F2FD;
}

.preview-icon {
  background: #FFF3E0;
}

.qr-icon {
  background: #E8F5E9;
}

.action-text {
  font-size: 28rpx;      /* 增大字号 (原24rpx -> 28rpx) */
  color: #333;           /* 加深颜色 */
  font-weight: 600;      /* 半粗体，比图标稍微细一点点但要清晰 */
  line-height: 1.4;
  margin-top: 12rpx;
}

/* 点击反馈 */
.action-item:active .action-icon-circle {
  transform: scale(0.95);
  opacity: 0.8;
}


/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 20rpx 0;
  padding-left: 16rpx;
  border-left: 8rpx solid #FF6B00;
}

/* 工具箱区域 */
.utility-section {
  margin-bottom: 40rpx;
}

.utility-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}

.utility-item {
  width: 33.333%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.utility-icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.utility-icon {
  font-size: 38rpx;
}

.utility-label {
  font-size: 30rpx;      /* 增大字号，方便点击阅读 (原24rpx -> 30rpx) */
  font-weight: bold;     /* 加粗 */
  color: #333;
  text-align: center;
  margin-top: 16rpx;
}

/* 工具箱颜色 */
.bg-red {
  background: #FFEBEE;
}

.bg-blue {
  background: #E3F2FD;
}

.bg-orange {
  background: #FFF3E0;
}

.bg-green {
  background: #E8F5E9;
}

.bg-purple {
  background: #F3E5F5;
}

.bg-cyan {
  background: #E0F7FA;
}

.bg-gray {
  background: #F5F5F5;
}

.bg-indigo {
  background: #E8EAF6;
}

/* 健康打卡区域 */
.habit-section {
  margin-bottom: 40rpx;
}

.habit-list {
  padding: 0 10rpx;
}

.habit-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

.habit-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.habit-done {
  background: #F0F9F0;
  opacity: 0.8;
}

.habit-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.habit-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.habit-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-circle {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #DDD;
  border-radius: 50%;
}

.footer-space {
  height: 60rpx;
}

/* BMI计算器模态框样式 */
.bmi-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.bmi-modal-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.bmi-modal.show .bmi-modal-content {
  transform: scale(1);
}

.bmi-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.bmi-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.bmi-modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.bmi-modal-body {
  padding: 40rpx 30rpx;
}

.bmi-input-item {
  margin-bottom: 30rpx;
}

.bmi-input-item:last-child {
  margin-bottom: 0;
}

.bmi-input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.bmi-input {
  width: 100%;
  height: 88rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.bmi-input-placeholder {
  color: #999;
}

.bmi-modal-footer {
  display: flex;
  border-top: 2rpx solid #F0F0F0;
  padding: 20rpx 30rpx 30rpx;
}

.bmi-modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
  border: none;
}

.bmi-modal-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #F5F5F5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%);
  color: #fff;
}

