/* pages/home/index.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
  background-color: #F8F8F8;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 卡片区域 */
.card-section {
  margin-bottom: 40rpx;
}

/* 加载中状态 */
.loading-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 100rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.loading-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态卡片 - 渐变引导卡片 */
.empty-card {
  background: linear-gradient(135deg, #FF8C33 0%, #FF6B00 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 0, 0.25);
  position: relative;
  overflow: hidden;
}

.empty-card-left {
  margin-right: 32rpx;
  flex-shrink: 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.empty-card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.empty-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 已创建卡片容器 - 医疗风格 */
.card-container {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border-top: 8rpx solid #FF6B00;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.header-left {
  flex: 1;
}

.card-header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.card-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #52C41A;
  margin-right: 8rpx;
}

.status-text {
  font-size: 24rpx;
  color: #52C41A;
  font-weight: 500;
}

.delete-icon-btn {
  padding: 8rpx;
  opacity: 0.6;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  min-height: 44rpx;
}

.delete-icon-btn:active {
  opacity: 1;
  transform: scale(0.95);
}

.delete-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 卡片内容 */
.card-content {
  padding: 40rpx;
}

/* 超大号姓名 */
.card-name {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  line-height: 1.2;
}

/* 关键信息网格（两列） */
.card-info-grid {
  display: flex;
  gap: 30rpx;
}

.card-info-col {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.card-info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.card-info-value.blood-type {
  font-size: 36rpx;
  color: #FF3B30;
}

.card-info-value.conditions {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; /* 单行显示，超出用省略号 */
  word-break: break-all;
}

/* 操作按钮网格 */
.card-actions-grid {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx 30rpx;
  border-top: 1rpx solid #F5F5F5;
  margin-top: 0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 10rpx;
  transition: all 0.2s ease;
}

/* 图标圆形按钮 */
.action-icon-circle {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.action-icon {
  font-size: 40rpx;
  line-height: 1;
}

.edit-icon {
  background: #E3F2FD;
}

.preview-icon {
  background: #FFF3E0;
}

.qr-icon {
  background: #E8F5E9;
}

.action-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}

/* 点击反馈 */
.action-item:active .action-icon-circle {
  transform: scale(0.95);
  opacity: 0.8;
}


/* 健康提醒区域 */
.reminder-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.reminder-header {
  margin-bottom: 24rpx;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reminder-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.reminder-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.reminder-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

