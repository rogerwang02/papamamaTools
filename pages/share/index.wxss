/* pages/share/index.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
  padding-bottom: 40rpx;
  padding-top: 20rpx;
}

/* Canvas 预览区域 */
.canvas-wrapper {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 壁纸模式：移除 padding 和背景，确保 Canvas 渲染为完整的 750rpx 宽度 */
.wallpaper-mode-wrapper {
  padding: 0 !important; /* 移除 padding 以允许 750rpx 完整宽度 */
  background-color: transparent !important; /* 与容器背景融合 */
  box-shadow: none !important; /* 移除阴影样式，壁纸预览更干净 */
  border-radius: 0 !important; /* 移除圆角 */
  margin-bottom: 24rpx; /* 保留底部间距 */
}

/* 确保 canvas 容器在壁纸模式下允许完整宽度 */
.wallpaper-mode-wrapper .canvas-container {
  width: 100%;
  padding: 0; /* 移除容器内边距 */
}

/* === 1. 画布容器 (紧凑版) === */
.canvas-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 减少上下间距，把内容往上提 */
  padding: 10rpx 0; 
  /* 移除不必要的 min-height，避免强制撑开 */
  min-height: auto;
  /* 确保容器本身不带色 */
  background-color: transparent;
  /* 关键：设置为相对定位，使 overlay 的 absolute 定位相对于此容器 */
  position: relative;
}

.preview-canvas {
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15);
  border-radius: 16rpx;
  /* 移除 transition，避免与 JS 尺寸计算冲突 */
  transition: none;
  display: block;
  background-color: #FFFFFF;
  max-width: 100%;
  height: auto;
}

/* 壁纸模式下可拖拽的容器 */
.draggable-container {
  user-select: none; /* 禁止选择文本 */
  position: relative;
  /* 不设置 touch-action: none，允许页面正常滚动 */
}

/* 壁纸模式下可拖拽的 Canvas */
.draggable-canvas {
  user-select: none; /* 禁止选择文本 */
  /* 不设置 touch-action: none，允许页面正常滚动 */
}

/* 二维码浮动层（Floating Widget） */
.qr-widget-overlay {
  position: absolute;
  /* 确保高 z-index 以在顶层并接收触摸事件 */
  z-index: 999;
  
  /* 匹配 Canvas 设计 */
  background: linear-gradient(180deg, #FFFFFF 0%, #FFF0E5 100%);
  border-radius: 40rpx; /* 约 20px */
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.3);
  
  /* Flex 布局 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
  /* 内容内边距 */
  padding: 20rpx;
  box-sizing: border-box;
  
  /* 确保可见和可交互 */
  opacity: 1;
  pointer-events: auto;
  transition: none; /* 移除过渡以实现即时拖拽 */
}

/* 内容容器 */
.widget-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

/* 二维码图片 - 超瘦身版 */
.widget-qr {
  /* 从 220rpx 缩小到 200rpx，匹配 JS 新逻辑 */
  width: 200rpx;
  height: 200rpx;
  margin-top: 0;
}

/* 文字组 */
.widget-text-group {
  /* 匹配 JS 中的 gap: 16 */
  margin-top: 16rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  /* 间距 6rpx，Canvas 绘图时将严格对其 */
  gap: 6rpx;
  width: 100%;
  padding: 0 4rpx;
}

/* 文字样式 */
.widget-text-title,
.widget-text-desc {
  /* FIX: Reduce font size to fit within the slimmer widget width */
  font-size: 22rpx; /* Reduced from 26rpx */
  font-weight: bold;
  color: #000;
  line-height: 1.4;
  white-space: nowrap; /* 防止文字换行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

/* === 2. 模式切换按钮组 (扁平化横排) === */
.tab-bar {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  /* 关键：强制背景透明，去掉突兀的白条 */
  background-color: transparent !important;
  /* 移除 box-shadow 和 border-radius，因为不再有容器背景 */
  /* 关键：大幅减少与上方 Canvas 的距离 */
  margin-top: 20rpx; 
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  /* 强制固定高度，变瘦 */
  height: 88rpx; 
  display: flex;
  /* 关键：水平排列 (Row) */
  flex-direction: row; 
  align-items: center;
  justify-content: center;
  /* 确保按钮本身有背景色 */
  background-color: #FFFFFF; /* 默认白色背景 */
  border-radius: 12rpx;
  margin: 0 12rpx;
  transition: all 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06); /* 给按钮添加阴影，增强浮起效果 */
}

.tab-item.active {
  background-color: #FF6B00;
  color: #FFFFFF;
  font-weight: bold;
}

.tab-icon {
  width: 36rpx;
  height: 36rpx;
  /* 图标在文字左边，右侧留间距 */
  margin-right: 12rpx;
  margin-bottom: 0; /* 移除底部间距 */
  line-height: 1;
}

.tab-text {
  font-size: 28rpx;
  line-height: 1;
  color: #666;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #FFFFFF;
  font-weight: 600;
}

/* === 3. 底部操作区 (确保紧凑) === */
.action-area {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx; /* 留一点底边距即可 */
}

/* 打印版操作区 */
.safety-tip {
  background-color: #FFF5E6;
  border-left: 4rpx solid #FF6B00;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 壁纸版操作区 */
.bg-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.bg-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  border: 2rpx solid #E0E0E0;
}

.bg-option-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.bg-option-text {
  font-size: 26rpx;
  color: #333;
}

/* 默认背景列表 */
.default-bg-list {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.default-bg-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(33.33% - 14rpx);
}

.bg-thumbnail {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  border: 3rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.default-bg-item.selected .bg-thumbnail {
  border-color: #FF6B00;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 0, 0.3);
}

.bg-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.default-bg-item.selected .bg-name {
  color: #FF6B00;
  font-weight: 600;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.save-btn::after {
  border: none;
}

.print-btn {
  background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 0, 0.3);
}

.wallpaper-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
}