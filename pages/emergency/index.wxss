/* pages/emergency/index.wxss */

/* Global Page Style */
page {
  background-color: #FFF0E5;
}

.container {
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部固定按钮留出空间 */
}

/* 顶部安全栏 */
.safety-bar {
  background-color: #FEF0F0;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.safety-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.safety-text {
  font-size: 24rpx;
  color: #D32F2F;
  font-weight: 500;
  line-height: 1.5;
}

/* 内容区域 */
.content-wrapper {
  padding: 30rpx;
}

/* Common Card Style */
.info-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
  width: 100%;
}

/* 1. Header Styles */
.header-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.avatar-area {
  margin-right: 30rpx;
  flex-shrink: 0;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 64rpx;
  color: #999;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.verified-badge {
  background: #E3F2FD;
  color: #1976D2;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.user-age {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 2. Note Styles */
.note-section {
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.note-text {
  font-size: 28rpx;
  color: #888;
  font-style: italic;
  line-height: 1.5;
  display: block;
}

/* 3. Grid Styles */
.grid-row {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.grid-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 160rpx;
}

.card-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.card-label .icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 橙黄色圆形警告图标 */
.icon-allergy {
  width: 32rpx;
  height: 32rpx;
  background-color: #FFA500;
  border-radius: 50%;
  margin-right: 8rpx;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  flex-shrink: 0;
}

.icon-allergy::after {
  content: '!';
  color: #FFF;
  font-size: 22rpx;
  font-weight: bold;
  line-height: 1;
}

.card-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.value-highlight {
  color: #FF6B00;
  font-size: 40rpx;
}

.text-red {
  color: #FF3B30;
}

/* 4. List/Tags Styles */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.tag-blue {
  background: #E8F5E9;
  color: #2E7D32;
}

.tag-orange {
  background: #FFF3E0;
  color: #EF6C00;
}

.empty-text {
  color: #CCC;
  font-size: 26rpx;
}

/* 最近更新时间 */
.update-time-section {
  text-align: center;
  padding: 20rpx 0;
  margin-top: 10rpx;
}

.update-time-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* Footer */
.fixed-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.call-btn {
  background: linear-gradient(135deg, #FF3B30, #FF6B00);
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  height: 90rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 59, 48, 0.3);
  width: 100%;
  border: none;
}

.call-btn::after {
  border: none;
}

.phone-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

/* 错误状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.loading-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 40rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 40rpx;
}

.error-text {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.back-btn {
  width: 400rpx;
  height: 88rpx;
  background-color: #FF6B00;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.back-btn::after {
  border: none;
}
