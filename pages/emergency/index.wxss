/* pages/emergency/index.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 180rpx; /* 为底部固定按钮留出空间 */
}

/* 顶部安全栏 */
.safety-bar {
  background-color: #FEF0F0;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.safety-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.safety-text {
  font-size: 24rpx;
  color: #D32F2F;
  font-weight: 500;
  line-height: 1.5;
}

/* 内容区域 */
.content-wrapper {
  padding: 30rpx;
}

/* 身份核验区 */
.identity-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.avatar-area {
  margin-right: 32rpx;
  flex-shrink: 0;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 64rpx;
  color: #999;
}

.identity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.identity-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.identity-badge {
  background-color: #1890FF;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.identity-detail {
  font-size: 28rpx;
  color: #666;
}

/* 关键医疗信息区 */
.medical-info-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 血型卡片 */
.blood-type-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.blood-type-icon {
  font-size: 80rpx;
  margin-right: 24rpx;
}

.blood-type-value {
  font-size: 96rpx;
  font-weight: bold;
  color: #FF3B30;
  letter-spacing: 8rpx;
}

/* 病史/过敏卡片 */
.conditions-card {
  background-color: #FFF0F0;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 59, 48, 0.1);
}

.conditions-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3B30;
  margin-bottom: 24rpx;
}

.conditions-content {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 32rpx;
}

.conditions-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #CC0000;
  line-height: 1.8;
  word-break: break-all;
  word-wrap: break-word;
}

/* 病史标签容器 */
.conditions-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.conditions-tag {
  display: inline-block;
  background-color: #FFF0F0;
  color: #CC0000;
  font-size: 28rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

/* 底部固定行动栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 24rpx 0;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  box-sizing: border-box;
}

.emergency-call-btn {
  width: 100% !important;
  height: 88rpx;
  background-color: #FF3B30;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 59, 48, 0.4);
  padding: 0 40rpx;
  box-sizing: border-box;
}

.emergency-call-btn::after {
  border: none;
}

.emergency-call-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
  line-height: 1;
}

.emergency-call-text {
  font-size: 32rpx;
  white-space: nowrap;
  flex-shrink: 0;
  line-height: 1;
}

/* 错误状态 */
/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.loading-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 40rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 40rpx;
}

.error-text {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.back-btn {
  width: 400rpx;
  height: 88rpx;
  background-color: #FF6B00;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn::after {
  border: none;
}

